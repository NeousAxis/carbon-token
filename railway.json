{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": ["sync/**"]
  },
  "deploy": {
    "preDeployCommand": [
      "sh -lc \"npm ci\""
    ],
    "startCommand": "node mint_burn_server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 180,
    "restartPolicyType": "ON_FAILURE"
  }
}